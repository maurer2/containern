// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
  "name": "Latex for ModernCV",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "skrallex/latexdevcontainer", // https://github.com/qdm12/latexdevcontainer/pull/66

  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [3000],

  // Use 'postCreateCommand' to run commands after the container is created.
  // academicons doesn't work with pdflatex
  // pgf -> tikz
  "postCreateCommand": "tlmgr update --self && tlmgr install moderncv fontawesome5 pgf multirow arydshln luatexbase academicons",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "settings": {
        // general
        "editor.guides.bracketPairs": true,
        "editor.stickyScroll.enabled": true,
        "editor.formatOnSave": true,
        "files.associations": {
          "*.tex": "latex"
        },
        // terminal
        "terminal.integrated.defaultProfile.linux": "zsh",
        // latex (https://github.com/qdm12/latexdevcontainer/blob/master/.devcontainer/devcontainer.json)
        "latex-workshop.linting.chktex.enabled": true,
        "latex-workshop.linting.chktex.exec.path": "chktex",
        "latex-workshop.latex.clean.subfolder.enabled": true,
        "latex-workshop.latex.autoClean.run": "onBuilt",
        "latex-workshop.formatting.latex": "latexindent",
        "latex-workshop.formatting.latexindent.path": "latexindent",
        "latex-workshop.formatting.latexindent.args": [
          "-c",
          "%DIR%/",
          "%TMPFILE%",
          "-y=defaultIndent: '%INDENT%'"
        ],
        // https://www.joelotz.com/blog/2022/enabling-different-latex-compilers-in-vs-code.html
        "latex-workshop.latex.tools": [
          {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
              "-shell-escape",
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-output-directory=%OUTDIR%",
              "%DOC%"
            ],
            "env": {}
          },
          {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "-output-directory=%OUTDIR%",
              "%DOC%"
            ],
            "env": {}
          }
        ],
        "latex-workshop.latex.recipes": [
          {
            "name": "build with lualatex",
            "tools": ["lualatex"]
          },
          {
            "name": "build with pdflatex",
            "tools": ["pdflatex"]
          }
        ]
      },
      "extensions": [
        "ban.spellright",
        "eamodio.gitlens",
        "EditorConfig.EditorConfig",
        "jock.svg",
        "shardulm94.trailing-spaces",
        "james-yu.latex-workshop",
        "waderyan.gitblame",
        "wmaurer.change-case",
        "eamodio.gitlens"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
